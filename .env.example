# Database Configuration (Phase 2)
DATABASE_URL="postgresql://postgres:password@localhost:5432/snack_storyteller_dev"

# JWT Authentication (Phase 2)
JWT_SECRET="your-super-secure-jwt-secret-min-32-chars-change-this-in-production"
JWT_EXPIRES_IN="24h"

# AI Provider API Keys (Phase 4)
# OpenAI (Primary)
OPENAI_API_KEY="sk-your-openai-key-here"

# Anthropic Claude (Fallback)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key-here"

# OpenRouter (Alternative)
OPENROUTER_API_KEY="sk-or-your-openrouter-key-here"

# Application URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Node Environment
NODE_ENV="development"

# Redis Cache (Optional - Phase 6+)
REDIS_URL="redis://localhost:6379"

# File Upload (Phase 3 - Writer Images)
# AWS S3 Configuration (Production)
AWS_S3_BUCKET="snack-storyteller-uploads"
AWS_S3_REGION="ap-northeast-2"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# Local Storage (Development)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880"  # 5MB in bytes

# Monitoring & Analytics (Optional)
SENTRY_DSN="your-sentry-dsn-here"
POSTHOG_API_KEY="your-posthog-key-here"

# Rate Limiting
RATE_LIMIT_TTL="60"  # seconds
RATE_LIMIT_MAX="100"  # requests per TTL

# AI Generation Settings (Phase 4)
AI_DEFAULT_PROVIDER="openai"
AI_TIMEOUT_MS="30000"
AI_MAX_RETRIES="3"
AI_TEMPERATURE="0.9"
AI_MAX_TOKENS="4000"
