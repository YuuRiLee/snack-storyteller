{
  "name": "snack-storyteller",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.2.1",
  "description": "AI-powered short story generation platform - Portfolio project",
  "scripts": {
    "dev": "concurrently -n web,server \"pnpm -F web dev\" \"pnpm -F server dev\"",
    "dev:web": "pnpm -F web dev",
    "dev:server": "pnpm -F server dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -F web test:e2e",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm -F server db:generate",
    "db:migrate": "pnpm -F server db:migrate",
    "db:migrate:dev": "pnpm -F server db:migrate:dev",
    "db:reset": "pnpm -F server db:reset",
    "db:seed": "pnpm -F server db:seed",
    "db:studio": "pnpm -F server db:studio",
    "prepare": "husky",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
